<%- include('./partials/header') %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-96 h-[60vh] bg-zinc-100 px-4 py-5 rounded-[15px]">
    <!-- <img class="w-12 items-center self-auto margin-auto" src="/images/logo.png" alt=""> -->
    <h1
      class="text-4xl tarcking-tighter text-center leading-none font-semi-bold capitalize"
    >
      Welcome to pinterest
    </h1>
    <form action="/register" method="post" class="py-5">
      <input
        class="block w-full px-4 py-3 rounded-md mt-2"
        type="text"
        name="username"
        id="username"
        placeholder="Username"
      />

      <input
        class="block w-full px-4 py-3 rounded-md mt-2"
        type="text"
        name="name"
        id="name"
        placeholder="Name"
      />
      <input
        class="block w-full px-4 py-3 rounded-md mt-2"
        type="email"
        name="email"
        id="email"
        placeholder="Email"
      />
      <input
        class="block w-full px-3 py-2 rounded-md mt-2"
        type="password"
        name="password"
        id="password"
        placeholder="Password"
      />
      <input
        class="block w-full px-3 py-2 rounded-full mt-5 bg-red-600 text-white"
        type="submit"
        value="Register"
      />
    </form>
    <a class="inline-block w-full text-center" href="/"
      >Already have an account?</a
    >
  </div>
</div>
<%- include('./partials/footer') %>
