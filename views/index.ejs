<%- include('./partials/header') %>
<div class="w-full h-screen bh-center bg-cover bg-[url('./images/bg-login.webp')] flex items-center justify-center">
  <div class="w-96 h-[60vh] bg-zinc-100 px-4 py-5 rounded-[15px]">
    <!-- <img class="w-12 items-center self-auto margin-auto" src="/images/logo.png" alt=""> -->
    <h1 class="text-4xl tarcking-tighter text-center leading-none font-semi-bold capitalize">Welcome to pinterest</h1>
    <form action="/login" method="post" class="py-5">
      <label class="px-3" for="username">Username</label>
      <input class="block w-full px-4 py-3 rounded-full mt-2" type="text" name="username" id="username" placeholder="username">
      <label class="px-3" for="password">Password</label>
      <input class="block w-full px-3 py-2 rounded-full mt-2" type="password" name="password" id="password" placeholder="password">
      <input class="block w-full px-3 py-2 rounded-full mt-2 bg-red-600 text-white" type="submit" value="Login">
    </form>
    <a class="inline-block w-full text-center" href="/register">Don't have an account?</a>
  </div>
</div>
<%- include('./partials/footer') %>