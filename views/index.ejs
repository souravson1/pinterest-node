<%- include('./partials/header') %>
<div class="w-full h-screen bh-center bg-cover bg-[url('./images/bg-login.webp')] flex items-center justify-center">
  <div class="w-96 h-fit flex flex-col items-center justify-center bg-zinc-100 px-8 py-5 rounded-[15px]">
    <img class="w-10" src="/images/logo.png" alt="">
    <h1 class="text-3xl py-4 tarcking-tighter text-center leading-none font-bold capitalize">Welcome to pinterest</h1>
    <div class="w-full px-2">
      <form action="/login" method="post" class="">
        <label class="px-2" for="username">Username</label>
        <input class="block w-full px-3 py-3 rounded-[15px] mt-2" type="text" name="username" id="username" placeholder="username">
        <label class="px-2" for="password">Password</label>
        <input class="block w-full px-3 py-3 rounded-[15px] mt-2" type="password" name="password" id="password" placeholder="password">
        <a href="#">Forgot your password?
        </a>
        <input class="block w-full py-2 rounded-full mt-2 bg-red-600 text-white" type="submit" value="Login">
        
      </form>
    </div>
    <a class="inline-block w-full text-center" href="/register">Don't have an account?</a>
  </div>
</div>
<%- include('./partials/footer') %>