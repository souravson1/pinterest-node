<%- include('./partials/header') %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-2xl">Create a new post.</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data" class="text-black">
        <input class="block w-1/3 px-3 py-2 mt-3" type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 mt-3 border-2 rounded-md" type="text" name="title" id="title" placeholder="Title">
        <textarea class="block w-1/3 px-3 py-2 mt-3 border-2 rounded-md" type="text" name="description" rows="5" id="description" placeholder="Description"></textarea>
        <input class="block w-1/3 px-3 py-2 mt-3 bg-red-700 rounded-md" type="submit" value="Create New Post">
    </form>
</div>
<%- include('./partials/footer') %>