<%- include('./partials/header') %>
<div class="w-full min-h-screen bg-zinc-800 flex flex-wrap gap-10 p-5">
  <% posts.reverse().forEach(post => { %>
  <div class="card w-52 ">
    <div class="w-full rounded-md relative overflow-hidden">
      <img
        class="w-full h-64"
        src="/images/uploads/<%= post.image %>"
        alt=""
      />
        <div class="absolute top-0 left-0 w-full h-full opacity-50 rounded-md hover:bg-gray-950"></div>
    </div>
    <h5 class="text-md text-white font-semibold mt-2"><%= post.title %></h5>
    <h5 class="text-sm text-white"><%= post.description %></h5>
  </div>
  <% }) %>
</div>
<%- include('./partials/footer') %>
